<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MES Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MES.Solution.styles.css" asp-append-version="true" />
</head>
<body class="app-body">
    <div class="app-shell">
        <aside class="sidebar">
            <div class="brand">
                <div class="brand-logo">MES</div>
                <div class="brand-text">Factory OS</div>
            </div>
            <nav class="sidebar-nav">
                <a class="nav-item is-active" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="nav-icon">🏠</span>
                    Dashboard
                </a>
                <a class="nav-item" href="#">
                    <span class="nav-icon">🧰</span>
                    Terminal
                </a>
                <a class="nav-item" href="#">
                    <span class="nav-icon">🧪</span>
                    Unit Trace
                </a>
                <a class="nav-item" href="#">
                    <span class="nav-icon">👥</span>
                    Workers
                </a>
                <a class="nav-item" href="#">
                    <span class="nav-icon">📈</span>
                    Operator Stats
                </a>
            </nav>
            <div class="sidebar-footer">
                <div class="user-badge">
                    <span class="user-avatar">AU</span>
                    <div>
                        <div class="user-name">Admin User</div>
                        <div class="user-role">Line Supervisor</div>
                    </div>
                </div>
            </div>
        </aside>

        <div class="app-main">
            <header class="topbar">
                <div class="topbar-left">
                    <div class="topbar-pill">
                        <span class="pill-icon">📊</span>
                        Dashboard
                    </div>
                    <div class="topbar-pill">
                        <span class="pill-icon">🖥️</span>
                        Terminal
                    </div>
                    <div class="topbar-pill">
                        <span class="pill-icon">🔍</span>
                        Unit Trace
                    </div>
                    <div class="topbar-pill">
                        <span class="pill-icon">👷</span>
                        Workers
                    </div>
                </div>
                <div class="topbar-right">
                    <button class="icon-btn" type="button" aria-label="Notifications">
                        🔔
                        <span class="badge">2</span>
                    </button>
                    <button class="icon-btn" type="button" aria-label="Profile">
                        👤
                    </button>
                </div>
            </header>

            <main class="content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
